{
  "manifest_version": 2,

  "name": "ShareZ",
  "description": "Elemental Social Knowledge Management System",
  "version": "1.0",
  "options_page": "options.html",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "history",
    "contextMenus",
    "*://*/*"
  ],
  "content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["jquery-1.9.1.js", "URI.js","contextmanager.js","overlay.js"]
  }],
  "background": {
    "scripts": ["jquery-1.9.1.js", "contextmanager.js", "sharez.js", "main.js", "popup.js"]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16":"images/icon.png",
    "48":"images/icon.png",
    "128":"images/icon.png"
  }
}