doctype 5
html
  head
    title= "ShareZ"
    link(rel='shortcut icon', type='image/png', href='/images/szLogo.png')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/site.css')
    script(src='javascripts/jquery-1.9.1.js')
    script(src='javascripts/underscore.js')
    script(src='javascripts/view_helper.js')
      // TODO: Need to consider optimizing this to avoid loading editor unnecessasrily
    script(src='epiceditor/js/epiceditor.js')
    block scripts
  body
    #sharez_header
      img#header_logo(src='http://127.0.0.1:3000/images/szlogo.png', alt='ShareZ', height='30', width='30')
      #user_header
        p(style="font-size:12px;float:left;height:30px;line-height:30px;margin:5px") 
        -if (typeof(user) !== 'undefined'){
          #{user.email}
        -}

        a.header_action_link(href="/logout" ) logout
        
        -if (user.is_admin === true) {
          a.header_action_link(href="/admin" ) admin
        -}

    #home_content
      block content