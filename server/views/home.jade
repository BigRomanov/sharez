extends home_layout

block content
  #home_content    
    h1(style="margin:5px auto") ShareZ Home
    h3(style="margin-top:5px")
        i social knowledge management system
    h3(style="margin-top:5px") Welcome, #{user.first_name}
    form#login_form(action='/login',method='POST')
        input#actionTags.tagInput.rounded(type="email" name="email" placeholder="email" style='width:430px')
        input#actionTags.tagInput.rounded(type="password" name="password" placeholder="password" style='width:300px')
        input.actionButton(type='submit',value='Login', style="float:right;width60px;margin-top:10px;height:30px;margin:5px") 
        
    #moreActions
        a(href="/signup" style="display:block;margin:40px auto;font-size:12px;width:140px") No account? Sign up!
            